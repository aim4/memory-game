{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": 0,
        "lines-between-class-members": ["error", "always", {"exceptAfterSingleLine": true}],
        "no-plusplus": "off"
    },
    "parser": "babel-eslint"
}
